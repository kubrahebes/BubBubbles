<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layer_46"
    tools:context="com.example.user.bubbubbles.LetStartActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hazır Mısın ? "
    android:textSize="32sp"
    android:textColor="#FEFF94"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp"
    android:id="@+id/text"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kumsaati"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/image"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/basla"
        android:text="Keşife Başla"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="36dp"
        android:background="@drawable/shape"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
       />

</RelativeLayout>
